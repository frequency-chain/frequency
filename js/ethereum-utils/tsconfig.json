{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "esnext",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2022",
    "typeRoots": ["node_modules/@types"],
    "types": ["mocha", "node"]
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules/**", "./scripts/**", "./dist/**"]
}
