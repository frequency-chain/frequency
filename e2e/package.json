{
  "name": "frequency-e2e-tests",
  "version": "1.0.0",
  "description": "End to end tests for the Frequency project",
  "type": "module",
  "scripts": {
    "clean": "rm -Rf dist",
    "build": "tsc -p ./tsconfig.json",
    "test": "mocha",
    "test:serial": "mocha --parallel=false",
    "test:relay-single": "mocha --config .relay-chain.mocharc.json --bail",
    "test:relay-funding": "mocha --config .relay-chain-all.mocharc.json --dry-run",
    "test:relay": "mocha --config .relay-chain-all.mocharc.json",
    "test:relay-list": "node test-files.mjs",
    "test:load": "mocha --config .load-test.mocharc.json",
    "test:xcm": "VERBOSE_LOG=true RUNTIME_LOG_LEVEL=5 vitest run xcm/",
    "test:xcm:debug": "LOG_LEVEL=debug RUNTIME_LOG_LEVEL=5 vitest run xcm/ --reporter=verbose",
    "fork:clean": "rm -f ./e2e/xcm/db/*.sqlite || true",
    "fork:frequency": "npx @acala-network/chopsticks --config=xcm/configs/frequency.yml",
    "fork:assethub": "npx @acala-network/chopsticks --config=xcm/configs/asset-hub.yml",
    "fork:xcm": "rm -f ./e2e/xcm/db/*.sqlite || true && npx @acala-network/chopsticks xcm -r ./xcm/configs/polkadot.yml -p ./xcm/configs/asset-hub.yml -p ./xcm/configs/frequency.yml ",
    "format": "tsc --noEmit --pretty && prettier --write . && eslint --fix .",
    "lint": "tsc --noEmit --pretty && eslint . && prettier --check .",
    "preinstall": "echo \"NOTICE: E2E tests REQUIRE ../js/api-augment to have been built and packaged\""
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@frequency-chain/api-augment": "file:../js/api-augment/dist",
    "@frequency-chain/ethereum-utils": "file:../js/ethereum-utils/dist",
    "@frequency-chain/recovery-sdk": "file:../js/recovery-sdk/dist",
    "@helia/unixfs": "5.0.4",
    "@noble/curves": "1.9.5",
    "@polkadot-api/merkleize-metadata": "1.1.20",
    "@polkadot/api": "16.4.3",
    "@polkadot/types": "16.4.3",
    "@polkadot/util": "13.5.4",
    "ethers": "6.15.0",
    "helia": "5.5.0",
    "multiformats": "13.3.7",
    "rxjs": "7.8.2",
    "workerpool": "9.3.3"
  },
  "devDependencies": {
    "@acala-network/chopsticks": "1.2.2",
    "@acala-network/chopsticks-testing": "1.2.2",
    "@eslint/js": "9.32.0",
    "@types/mocha": "10.0.10",
    "dotenv": "16.4.0",
    "eslint": "9.32.0",
    "eslint-plugin-mocha": "11.1.0",
    "glob": "11.0.3",
    "globals": "16.3.0",
    "mocha": "11.7.1",
    "prettier": "3.6.2",
    "sinon": "21.0.0",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "typescript-eslint": "8.38.0",
    "vitest": "2.0.0"
  },
  "optionalDependencies": {
    "@esbuild/linux-x64": "0.25.8"
  }
}
